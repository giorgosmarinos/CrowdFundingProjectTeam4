@{
}
@model IEnumerable<CrowdFundingProjectTeam4.Model.FundingPackage>;

<h4 class="display-4 text-center"><b>Fundable Package Rewards</b></h4>
<h5 class="text-center">of @Html.DisplayFor(model => model.First().OwnedByProject.Title)</h5>


<br />
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Reward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectId)
                </td>
                <td>
                <td>
                    <button class="btn btn-outline-success" onclick="location.href='@Url.Action("Index", "FundingPackage", new { item.FundingPackageId })'">Fund</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />
<div>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Project" , new { @Model.First().OwnedByProject.ProjectId })'">Fund</button>
</div>